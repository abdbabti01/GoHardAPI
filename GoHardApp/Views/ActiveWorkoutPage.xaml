<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:GoHardApp.ViewModels"
             xmlns:model="clr-namespace:GoHardApp.Models"
             x:Class="GoHardApp.Views.ActiveWorkoutPage"
             x:DataType="viewmodel:ActiveWorkoutViewModel"
             Title="Active Workout">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header with Timer -->
        <Frame Grid.Row="0"
               BackgroundColor="{StaticResource Primary}"
               CornerRadius="0"
               HasShadow="False"
               Padding="20"
               BorderColor="Transparent">
            <VerticalStackLayout Spacing="8">
                <Label Text="{Binding WorkoutType}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>

                <Label Text="{Binding ElapsedTime, StringFormat='⏱️ {0:hh\\:mm\\:ss}'}"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Exercises List -->
        <Grid Grid.Row="1">
            <CollectionView ItemsSource="{Binding Exercises}"
                           Margin="0,16,0,0">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Padding="20">
                        <Label Text="No exercises added yet"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Tap + to add exercises"
                               FontSize="14"
                               HorizontalTextAlignment="Center"
                               Margin="0,8,0,0"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Exercise">
                        <Frame Margin="15" Padding="15" CornerRadius="10" HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ActiveWorkoutViewModel}}, Path=ViewExerciseSetsCommand}"
                                                     CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>

                            <Grid RowDefinitions="Auto,Auto"
                                  ColumnDefinitions="*,Auto"
                                  RowSpacing="8">
                                <!-- Exercise Name -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"/>

                                <!-- Sets Count Badge -->
                                <Frame Grid.Row="0" Grid.Column="1"
                                       Padding="8,4"
                                       CornerRadius="10"
                                       BackgroundColor="LightBlue"
                                       HasShadow="False"
                                       BorderColor="Transparent">
                                    <Label Text="{Binding ExerciseSets.Count, StringFormat='{0} sets'}"
                                           FontSize="12"
                                           VerticalOptions="Center"/>
                                </Frame>

                                <!-- Notes -->
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding Notes}"
                                       FontSize="12"
                                       IsVisible="{Binding Notes, Converter={StaticResource IsNotNullConverter}}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- FAB for Add Exercise -->
            <Button Text="+"
                    WidthRequest="60"
                    HeightRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="30"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="20"
                    Command="{Binding AddExerciseCommand}"/>
        </Grid>

        <!-- Finish Workout Button -->
        <Button Grid.Row="2"
                Text="Finish Workout"
                BackgroundColor="Green"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="18"
                Padding="0,14"
                Command="{Binding FinishWorkoutCommand}"
                Margin="20,0,20,24"/>
    </Grid>

</ContentPage>
