<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:GoHardApp.ViewModels"
             x:Class="GoHardApp.Views.ExerciseDetailPage"
             Title="{Binding Exercise.Name}">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">
            <!-- Image/Placeholder Section -->
            <Frame Padding="0"
                   CornerRadius="0"
                   HasShadow="False"
                   HeightRequest="200"
                   BackgroundColor="{Binding CategoryColor}">
                <Grid>
                    <!-- Placeholder Icon when no image -->
                    <Label Text="{Binding CategoryIcon}"
                           FontSize="80"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="White"
                           Opacity="0.3"
                           IsVisible="{Binding HasImage, Converter={StaticResource InvertedBoolConverter}}"/>

                    <!-- Actual Image (when available) -->
                    <Image Source="{Binding Exercise.ImageUrl}"
                           Aspect="AspectFill"
                           IsVisible="{Binding HasImage}"/>
                </Grid>
            </Frame>

            <!-- Main Content -->
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- Header with Badges -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="{Binding Exercise.Name}"
                           FontSize="28"
                           FontAttributes="Bold"/>

                    <HorizontalStackLayout Spacing="10">
                        <!-- Category Badge -->
                        <Frame Padding="10,5"
                               CornerRadius="15"
                               HasShadow="False"
                               BackgroundColor="{Binding CategoryColor}">
                            <Label Text="{Binding Exercise.Category}"
                                   TextColor="White"
                                   FontSize="14"
                                   FontAttributes="Bold"/>
                        </Frame>

                        <!-- Difficulty Badge -->
                        <Frame Padding="10,5"
                               CornerRadius="15"
                               HasShadow="False"
                               BackgroundColor="Gray">
                            <HorizontalStackLayout Spacing="5">
                                <Label Text="â­"
                                       FontSize="14"
                                       VerticalOptions="Center"/>
                                <Label Text="{Binding Exercise.Difficulty}"
                                       TextColor="White"
                                       FontSize="14"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Details Section -->
                <Frame Padding="15"
                       CornerRadius="10"
                       HasShadow="False"
                       BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="DETAILS"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"/>

                        <Grid ColumnDefinitions="Auto,*"
                              RowDefinitions="Auto,Auto,Auto"
                              ColumnSpacing="15"
                              RowSpacing="8">
                            <!-- Muscle Group -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="ðŸ’ª Muscle Group:"
                                   FontSize="14"
                                   TextColor="Gray"/>
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding Exercise.MuscleGroup}"
                                   FontSize="14"
                                   FontAttributes="Bold"/>

                            <!-- Equipment -->
                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="ðŸ”§ Equipment:"
                                   FontSize="14"
                                   TextColor="Gray"/>
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding Exercise.Equipment}"
                                   FontSize="14"
                                   FontAttributes="Bold"/>

                            <!-- Difficulty -->
                            <Label Grid.Row="2" Grid.Column="0"
                                   Text="â­ Difficulty:"
                                   FontSize="14"
                                   TextColor="Gray"/>
                            <Label Grid.Row="2" Grid.Column="1"
                                   Text="{Binding Exercise.Difficulty}"
                                   FontSize="14"
                                   FontAttributes="Bold"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Description Section -->
                <VerticalStackLayout Spacing="10"
                                    IsVisible="{Binding Exercise.Description, Converter={StaticResource IsNotNullConverter}}">
                    <Label Text="DESCRIPTION"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Text="{Binding Exercise.Description}"
                           FontSize="15"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>

                <!-- Instructions Section -->
                <VerticalStackLayout Spacing="10"
                                    IsVisible="{Binding HasInstructions}">
                    <Label Text="INSTRUCTIONS"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Frame Padding="15"
                           CornerRadius="10"
                           HasShadow="False"
                           BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
                        <Label Text="{Binding Exercise.Instructions}"
                               FontSize="15"
                               LineBreakMode="WordWrap"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Video Section (if available) -->
                <VerticalStackLayout Spacing="10"
                                    IsVisible="{Binding HasVideoUrl}">
                    <Label Text="VIDEO"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Frame Padding="15"
                           CornerRadius="10"
                           HasShadow="False"
                           BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
                        <Label Text="{Binding Exercise.VideoUrl}"
                               FontSize="14"
                               TextColor="{StaticResource Primary}"
                               TextDecorations="Underline"/>
                    </Frame>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
