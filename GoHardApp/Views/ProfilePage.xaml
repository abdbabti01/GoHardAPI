<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:GoHardApp.ViewModels"
             x:Class="GoHardApp.Views.ProfilePage"
             x:DataType="viewmodel:ProfileViewModel"
             Title="Profile">

    <ScrollView>
        <VerticalStackLayout Spacing="20">
            <!-- Profile Header -->
            <Frame BackgroundColor="{StaticResource Primary}"
                   CornerRadius="0"
                   HasShadow="False"
                   Padding="30"
                   BorderColor="Transparent">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ‘¤"
                           FontSize="64"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding UserName}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding UserEmail}"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- User Info Card -->
            <Frame Margin="20,20,20,0" Padding="20" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Account Information"
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <BoxView HeightRequest="1"
                             Color="LightGray"
                             Margin="0,8"/>

                    <!-- Name Row -->
                    <Grid ColumnDefinitions="100,*">
                        <Label Grid.Column="0"
                               Text="Name"
                               FontSize="14"/>
                        <Label Grid.Column="1"
                               Text="{Binding UserName}"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </Grid>

                    <!-- Email Row -->
                    <Grid ColumnDefinitions="100,*">
                        <Label Grid.Column="0"
                               Text="Email"
                               FontSize="14"/>
                        <Label Grid.Column="1"
                               Text="{Binding UserEmail}"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Logout Button -->
            <Button Text="Logout"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="18"
                    Padding="0,14"
                    Command="{Binding LogoutCommand}"
                    Margin="20,16,20,0"/>

            <!-- App Info -->
            <VerticalStackLayout Spacing="4"
                               Margin="0,32,0,24">
                <Label Text="GoHard Workout Tracker"
                       FontSize="12"
                       HorizontalOptions="Center"/>
                <Label Text="Version 1.0.0"
                       FontSize="10"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
